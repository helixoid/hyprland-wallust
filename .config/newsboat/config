# vim: ft=apachestyle cms=#\ %s :

# feed options
auto-reload yes
reload-threads 10
reload-time 60
reload-threads 8
download-retries 2
download-timeout 10
download-full-page yes
scrolloff 11
always-display-description true
text-width 120
goto-next-feed no

# keybindings
bind-key j down
bind-key k up
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key s sort
bind-key S rev-sort
bind-key d delete-article
bind-key f goto-url
bind-key ENTER open

browser "(firefox %u >/dev/null 2>&1) &"
macro v set browser "mpv %u &> /dev/null &" ; open-in-browser ; set browser "elinks %u"

# notification
notify-format "newsbeuter: finished reload, %f unread feeds (%n unread articles total)"
notify-program "notify-send"
notify-always no
notify-screen no
notify-xterm yes
notify-beep no

#include ~/.config/newsboat/dark

#feedlist-format "%?T?║%n %12u %t &╠ %t?"
#highlight feedlist "[║│]" color3 color0
#highlight feedlist "╠.*" color3 color0
